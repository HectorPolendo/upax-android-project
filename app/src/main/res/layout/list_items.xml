<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivPokemon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ivPokemon"
            app:layout_constraintEnd_toEndOf="@+id/ivPokemon"
            app:layout_constraintTop_toTopOf="@+id/ivPokemon"
            app:layout_constraintBottom_toBottomOf="@+id/ivPokemon"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="22dp"
            android:text="Nombre del pokemon"
            app:layout_constraintStart_toEndOf="@+id/ivPokemon"
            app:layout_constraintTop_toTopOf="@+id/ivPokemon"
            app:layout_constraintBottom_toBottomOf="@+id/ivPokemon"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
